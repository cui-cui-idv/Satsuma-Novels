<%- include('partials/header') %>
<div class="auth-container">
    <div class="auth-form-wrapper">
        <h2>新規登録</h2>

        <% if (typeof error !== 'undefined' && error) { %>
            <p style="color: #ff4d4d; background-color: rgba(255, 77, 77, 0.1); padding: 1rem; border-radius: 8px; text-align: center;">
                <%= error %>
            </p>
        <% } %>
        <form action="/register" method="POST">
            <div class="input-group">
                <input type="text" id="username" name="username" required placeholder="ユーザー名">
            </div>
            <div class="input-group">
                <input type="email" id="email" name="email" required placeholder="メールアドレス">
            </div>
            <div class="input-group">
                <input type="password" id="password" name="password" minlength="6" required placeholder="パスワード">
            </div>
            <button type="submit" class="btn btn-primary">登録</button>
        </form>
        <p style="text-align: center; margin-top: 2rem; color: var(--font-secondary);">
            すでにアカウントをお持ちですか？ <a href="/login" style="color: var(--accent-primary);">ログイン</a>
        </p>
    </div>
</div>
<%- include('partials/footer') %>