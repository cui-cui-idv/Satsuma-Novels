<% if (user) { %>
    <%- include('partials/header') %>
    <main class="container">
<div class="card">
    <h2>ようこそ、<%= user.username %>さん</h2>
    <p>ここからあなたの物語が始まります。</p>
    <a href="/novels/new" class="btn btn-primary" style="margin-top: 1rem;">新しいシリーズを開始する</a>
</div>

        <h2>人気作品</h2>
        <div class="grid-container">
            <% popularNovels.forEach(novel => { %>
                <a href="/novels/<%= novel.id %>" class="card-link">
                    <div class="card">
                        <h4 class="card-title"><%= novel.title %></h4>
                        <p style="flex-grow: 1; color: var(--font-secondary);"><%= novel.description ? novel.description.substring(0, 80) + '...' : 'あらすじはありません' %></p>
                        <small style="color: var(--font-secondary); text-align: right;">作者: <%= novel.authorName %></small>
                    </div>
                </a>
            <% }) %>
        </div>

        <h2 style="margin-top: 3rem;">新着作品</h2>
        <div class="grid-container">
            <% newNovels.forEach(novel => { %>
                <a href="/novels/<%= novel.id %>" class="card-link">
                    <div class="card">
                        <h4 class="card-title"><%= novel.title %></h4>
                        <p style="flex-grow: 1; color: var(--font-secondary);"><%= novel.description ? novel.description.substring(0, 80) + '...' : 'あらすじはありません' %></p>
                        <small style="color: var(--font-secondary); text-align: right;">作者: <%= novel.authorName %></small>
                    </div>
                </a>
            <% }) %>
        </div>
    </main>
    <%- include('partials/footer') %>

<% } else { %>
    <%- include('partials/header') %>
    <main class="hero-section">
        <h1>物語の宇宙へ、<br>ダイブせよ。</h1>
        <p class="subtitle">薩摩ノベルズは、あなたの創造力を解き放つ場所。書き、読み、世界と繋がろう。</p>
        <div class="cta-buttons">
            <a href="/register" class="btn btn-primary">今すぐ始める</a>
            <a href="/login" class="btn btn-secondary">ログイン</a>
        </div>
    </main>
<% } %>